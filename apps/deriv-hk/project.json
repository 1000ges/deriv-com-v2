{
  "name": "deriv-hk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/deriv-hk",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/deriv-hk"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/deriv-hk"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "deriv-hk:build",
        "dev": true,
        "keepAliveTimeout": 60000,
        "hostname": "localhost"
      },
      "configurations": {
        "development": {
          "buildTarget": "deriv-hk:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "deriv-hk:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "deriv-hk:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/deriv-hk/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/deriv-hk/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
